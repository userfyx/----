<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hhzmy.fragment.MineFragment">

    <RelativeLayout
        android:id="@+id/mybuy_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eee"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:src="@mipmap/ucwv_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录" />
    </RelativeLayout>

    <View
        android:id="@+id/my_buy_v"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/mybuy_rl"
        android:background="#000"></View>

    <LinearLayout
        android:id="@+id/my_buy_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_buy_v"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="0.2"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/input_ZHao"
            android:background="@null"
            android:layout_weight="0.8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="手机号/邮箱/用户名/门店会员卡"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:id="@+id/my_buy_v1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/my_buy_ll"
        android:layout_marginTop="15dp"
        android:background="#000"></View>

    <LinearLayout
        android:paddingTop="20dp"
        android:id="@+id/my_buy_ll_one"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_buy_v1"
        >
        <TextView
            android:paddingLeft="15dp"
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/input_passW"
            android:layout_weight="0.6"
            android:elegantTextHeight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入6——20位的易购密码"
            android:password="true"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/iv"
            android:layout_weight="0.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/mybuy_show_password"
            android:layout_gravity="center_vertical" />
    </LinearLayout>



    <View
        android:id="@+id/view_three"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/my_buy_ll_one"
        android:layout_marginTop="1dp"
        android:background="#d4cece"></View>


    <LinearLayout
        android:id="@+id/yzm"
        android:paddingTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_three">
        <TextView
            android:paddingLeft="15dp"
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/input_YanZM"
            android:background="@null"
            android:layout_weight="0.38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入右侧验证码"
            android:textSize="18sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#89897a"/>
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1.18"
            android:text="ABCD"
            android:textSize="20sp"
            />


    </LinearLayout>


    <Button
        android:id="@+id/my_bt_login"
        android:layout_below="@id/yzm"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:text="登录"/>
    <TextView
        android:id="@+id/my_buy_nopassword"
        android:layout_marginTop="15dp"
        android:layout_below="@id/my_bt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="忘记密码"/>
    <Button
        android:id="@+id/ZC"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/my_buy_nopassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/btn_register_normal"
        android:textColor="#FFC948"

        />



</RelativeLayout>
